# 全局安全头
/*
  # 安全相关头部
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=(), payment=(), usb=()
  
  # SEO 优化头部
  X-Robots-Tag: index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1
  X-UA-Compatible: IE=edge
  
  # 内容安全策略 (CSP) - 优化后
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://pagead2.googlesyndication.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com; frame-src 'self' https:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self';
  
  # Link 头部 - 添加资源提示
  Link: </logo.png>; rel=preload; as=image
  Link: </favicon.svg>; rel=preload; as=image
  Link: <https://www.googletagmanager.com>; rel=preconnect; crossorigin
  Link: <https://fonts.googleapis.com>; rel=preconnect; crossorigin
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin
  
  # 性能优化
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# 静态资源缓存优化
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8

# 图片资源优化
/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/*.jpg
/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml; charset=utf-8

/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp

# 字体文件
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
  Access-Control-Allow-Origin: *

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff
  Access-Control-Allow-Origin: *

# HTML 文件
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: text/html; charset=utf-8

# Manifest 和 Service Worker
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json; charset=utf-8

/sw.js
  Cache-Control: public, max-age=0, must-revalidate
  Content-Type: application/javascript; charset=utf-8

# XML 文件
/*.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml; charset=utf-8

