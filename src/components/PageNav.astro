---
import NavLink from './NavLink.svelte';
import configs from '../configs';
---

<section id="page-nav">
  {
    configs.map(({ title }) => (
      <NavLink client:only='svelte'  href={'#' + title} title={title}></NavLink>
    ))
  }
</section>

<style>
  #page-nav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2rem 0;
  }
</style>